@model IEnumerable<WebApplication1.Models.GameModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <tr>
        <th>
            ID:
            @Html.ActionLink("Order by id", "Index", new { sortOrder = ViewBag.IdSortParm })
            @ViewBag.Message
        </th>
        <th>
            NAME:
            @Html.ActionLink("Order by name", "Index", new { sortOrder = ViewBag.NameSortParm })
            @ViewBag.Message1
        </th>
        <th>
            PUNTUATION:
            @Html.ActionLink("Order by puntuation", "Index", new { sortOrder = ViewBag.PuntuationSortParm })
            @ViewBag.Message2
        </th>

        <th></th>
    </tr>
    </table>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Puntuation)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Puntuation)
                    </td>
                    <td>
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    </td>
                </tr>
            }
        </tbody>
    </table>
